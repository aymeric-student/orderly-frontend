{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "literalPropertyKeys": "off",
        "noVar": "error",
        "useSingleCaseStatement": "error",
        "noUselessElse": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      "coverage/**",
      ".angular/cache/**",
      "./src/app/lib/i18n/i18n.translations.ts",
      "./i18n.translations.ts",
      "./karma.conf.js"
    ]
  }
}
